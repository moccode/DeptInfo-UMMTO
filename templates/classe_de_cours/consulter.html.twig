{% extends 'base.html.twig' %}

{% block title classeDeCours.titre %}

{% block body %}

	<h3>
		{{ classeDeCours.titre }}
		-
		<a href="{{ path('app_classedecours_editer', {'id_classedecours' : classeDeCours.id }) }}">
			Editer
		</a>
	</h3>
	<p>{{ classeDeCours.promotion.titre }}</p>
	<p>{{ classeDeCours.description }}</p>
	<p>
		<a href="{{ path('app_cours_creer', {'id_classedecours' : classeDeCours.id }) }}">
			Publier un nouveau cours
		</a>

	</p>
	<br><br>


	<a href="{{ path('app_classedecours_index') }}">Revenir à mes classes de cours</a>

	<h4>Liste des cours publiés dans cette classe de cours - 
				({{ classeDeCours.cours|length }}
		cours)
	</h4>


	{% if (classeDeCours.cours|length) == 0 %}
		Aucun cours publié dans cette classe pour le moment.
		<a href="{{ path('app_cours_creer', {'id_classedecours' : classeDeCours.id }) }}">
			créez-en un !
		</a>

	{% else %}
		{% for cour in classeDeCours.cours %}
			<a href="{{ path('app_cours_consulter', { 'id_classedecours' : classeDeCours.id, 'id_cours' : cour.id } ) }}">{{ cour.titre }}</a>
			<br>
		{% endfor %}
	{% endif %}

{% endblock %}
