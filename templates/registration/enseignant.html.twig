{% extends 'base.html.twig' %}

{% block title "Inscription | Enseignants" %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="row">
		<div class="col-md-6 mx-auto">
			<h3 class="mb-3 fw-normal text-center">Créer un compte enseignant</h3>
			{{ include("registration/_form.html.twig") }}
			<p class="mt-3">
				<small>
					Vous êtes un étudiant ?
					<a href=" {{ path('app_registration_etudiant')}} ">S'inscrire ici</a>
				</small>
			</p>
		</div>
	</div>
{% endblock %}
