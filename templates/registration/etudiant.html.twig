{% extends 'base.html.twig' %}

{% block title "Inscription | Étudiants" %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="row">
		<div class="col-md-6 mx-auto">
			<h3 class="mb-3 fw-normal text-center">Créer un compte étudiant</h3>
			{{ include("registration/_form.html.twig", {'etudiant' : etudiant}) }}
			<p class="mt-3">
				<small>
					Vous êtes un enseignant ?
					<a href=" {{ path('app_registration_enseignant')}} ">S'inscrire ici</a>
				</small>
			</p>
		</div>
	</div>
{% endblock %}
